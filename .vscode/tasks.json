{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C program (Windows)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "gcc -Iinclude $(Get-ChildItem -Path src -Filter *.c | ForEach-Object { $_.FullName }) -o main.exe -Wall -Wextra -g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile all .c files in src/ with headers in include/ (Windows)"
        }
    ]
}